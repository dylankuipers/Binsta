{% extends "./layouts/app.twig" %}

{% block body %}
	<body>
        <div class="mx-auto bg-white mt-8 mb-8 w-[75%] rounded">
        <div class="font-bold font-mono text-xl pl-2 pt-2">Create a new post for {{ user.username }}:</div>
        <form method="POST">
            <div class="pl-2 pr-2 pt-2">
                <textarea name="codeContent" placeholder="Your code here..." class="text-white rounded bg-stone-900 font-mono pt-6 pb-6 pl-6 w-full max-h-80 h-80 focus:outline-none resize-none" required></textarea>
            </div>
            <div class="bg-white flex flex-col p-3">
                <textarea name="description" placeholder="Your description here..." class="font-mono bg-zinc-200 w-full rounded p-2 h-24 focus:outline-none resize-none min-h-full" required></textarea>
            </div>
            <div class="bg-white pl-4 pb-2">
                <label for="codeLanguage" class="font-mono">Coding Language</label>
                <select name="codeLanguage" class="rounded bg-zinc-200 font-mono m-2">
                    <option value="PHP">PHP</option>
                    <option value="Javascript">Javascript</option>
                    <option value="Lua">Lua</option>
                    <option value="SQL">SQL</option>
                    <option value="C">C</option>
                    <option value="SCSS">SCSS</option>
                    <option value="CSS">CSS</option>
                    <option value="C++">C++</option>
                    <option value="Java">Java</option>
                    <option value="Python">Python</option>
                    <option value="TypeScript">Typescript</option>
                </select>
            </div>
            <div class="bg-white rounded-b pl-4 pb-4">
                <button name="submit" class="border-2 bg-zinc-100 border-black w-24 rounded" value="createPost">Create post</button>
            </div>
            </form>
        </div>
	</body>
{% endblock %}